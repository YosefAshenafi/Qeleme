{
  "expo": {
    "name": "Qelem",
    "slug": "Qelem",
    "version": "1.0.6",
    "orientation": "default",
    "icon": "./assets/images/logo/app-icon.png",
    "scheme": "qelem",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "description": "Qelem - Educational platform for interactive learning",
    "splash": {
      "image": "./assets/images/logo/white-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#6B54AE"
    },
    "privacy": "public",
    "sdkVersion": "53.0.0",
    "extra": {
      "apiUrl": "https://api.qelem.com",
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "7fb4acbe-6a5a-4e12-aaed-d221156f0fdc"
      }
    },
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": false,
      "bundleIdentifier": "com.qelemapp.qelem",
      "buildNumber": "6",
      "icon": "./assets/images/logo/app-icon.png",
      "infoPlist": {
        "UIRequiresFullScreen": false,
        "UIStatusBarStyle": "UIStatusBarStyleDefault",
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to access your camera to take photos.",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to access your microphone for audio recording.",
        "NSPhotoLibraryUsageDescription": "Allow $(PRODUCT_NAME) to access your photos.",
        "NSPhotoLibraryAddUsageDescription": "Allow $(PRODUCT_NAME) to save photos to your library."
      },
      "splash": {
        "image": "./assets/images/logo/white-logo.png",
        "resizeMode": "contain",
        "backgroundColor": "#6B54AE"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo/app-icon.png",
        "backgroundColor": "#6B54AE"
      },
      "splash": {
        "image": "./assets/images/logo/white-logo.png",
        "resizeMode": "contain",
        "backgroundColor": "#6B54AE"
      },
      "package": "com.qelemapp.qelem",
      "versionCode": 15,
      "compileSdkVersion": 35,
      "targetSdkVersion": 35,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.qelemapp.qelem",
      "privacyPolicy": "https://qelem.net/privacy-policy"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo/white-logo.png",
          "imageWidth": 150,
          "resizeMode": "contain",
          "backgroundColor": "#6B54AE"
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "owner": "jossyfreelancer"
  }
}
